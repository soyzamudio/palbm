extends ../../layouts/master
block content
  .container
    .row
      .page-header
        h1 New Album
      form.form-inline(method='post', action='/albums', enctype='multipart/form-data')
        label Name
        input.form-control.form-group(type='text', name='name')
        label Date
        input.form-control.form-group(type='date', name='date')
        label Files
        input.form-control.form-group(type='file', name='photos', multiple=true, required='true')
        button.form-control.btn.btn-primary(type='submit') Add Album
