extends ../../layouts/master
block content
  .container
    .row
    .page-header
      h1= album.name
    form.form-inline(method='post', action='/albums/#{album._id}/update')
      label Name
      input.form-control.form-group(type='text', name='name', value=album.name)
      label Date
      - var day = album.date.getDate()
      - var month = album.date.getMonth()
      - var year = album.date.getFullYear()
        input.form-control.form-group(type='date', name='date', value='#{year}-0#{month}-#{day}')
        button.form-control.btn.btn-primary(type='submit') Edit Album
    
