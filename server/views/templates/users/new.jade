extends ../../layouts/master
block content
  .container
    .row
      .page-header
        h1 Register
      form.form-inline(method='post', action='/users')
        label(for='email') Email
        input#email.form-control.form-group(type='email', name='email')
        label(for='password') Password
        input#password.form-control.form-group(type='password', name='password')
        button.form-control.btn.btn-primary(type='submit') Register
